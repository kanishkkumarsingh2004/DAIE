# Decentralized AI Ecosystem - Environment Variables

# Central Core System
CENTRAL_CORE_HOST=0.0.0.0
CENTRAL_CORE_PORT=8000
CENTRAL_CORE_DEBUG=True

# Database Configuration
DATABASE_URL=sqlite:///./central_core.db

# Redis Configuration (for caching and messaging)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Authentication and Authorization
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600

# Agent Node Configuration
AGENT_NODE_ID=agent-docker-001
AGENT_NODE_NAME=Docker Test Agent
AGENT_NODE_ROLE=test-agent
CENTRAL_CORE_URL=http://localhost:8000

# LLM Configuration
OLLAMA_BASE_URL=http://localhost:11434
DEFAULT_MODEL=llama3

# Embeddings Configuration
EMBEDDINGS_MODEL=text-embedding-3-small
EMBEDDINGS_DIM=1536

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=system.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Security Configuration
ENCRYPTION_KEY=your-encryption-key-here
SIGNATURE_ALGORITHM=ed25519

# Performance Configuration
WORKER_COUNT=4
MAX_CONNECTIONS=100
REQUEST_TIMEOUT=30

# Memory Configuration
EPISODIC_MEMORY_PATH=./agent_node_system/local_storage/episodic_memory.db
SEMANATIC_MEMORY_PATH=./agent_node_system/local_storage/semantic_vector_db
SHORT_TERM_MEMORY_PATH=./agent_node_system/local_storage/short_term.cache

# Tool Configuration
TOOL_DIR=./agent_node_system/local_tools
TOOL_CACHE_SIZE=100

# Network Configuration
P2P_PORT=5000
P2P_BOOTSTRAP_NODES=
